@model RepositoryDetailsViewModel

@{
    ViewData["Title"] = "Repository Details";
}

<a asp-controller="Commit" asp-action="Commit" asp-route-id="@Model.Id" class="btn btn-secondary">New Commit</a>
<a asp-controller="PullRequest" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-secondary">Open Pull Request</a>
<a asp-controller="Issue" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-secondary">New Issue</a>
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary text-light">@Model.Name</h2>
        <hr />
    </div>
    <div class="mt-3">
        @Html.Raw(Model.Content)
    </div>
    <br /><br />
    <a asp-controller="Commit" asp-action="History" asp-route-id="@Model.Id" class="btn btn-outline-primary">Commits History</a>
    <a asp-controller="PullRequest" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-primary">Pull Requests</a>
    <a asp-controller="Issue" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-primary">Issues</a>
</div>
